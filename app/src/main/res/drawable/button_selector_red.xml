<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/button_corner" android:bottomRightRadius="@dimen/button_corner" android:topLeftRadius="@dimen/button_corner" android:topRightRadius="@dimen/button_corner" />
            <gradient android:angle="90" android:endColor="@color/theme_red_dark" android:startColor="@color/theme_red_dark" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/button_corner" android:bottomRightRadius="@dimen/button_corner" android:topLeftRadius="@dimen/button_corner" android:topRightRadius="@dimen/button_corner" />
            <solid android:color="@color/theme_red_dark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/button_corner" android:bottomRightRadius="@dimen/button_corner" android:topLeftRadius="@dimen/button_corner" android:topRightRadius="@dimen/button_corner" />
            <gradient android:angle="90" android:endColor="@color/theme_red" android:startColor="@color/theme_red" />
        </shape>
    </item>

</selector>