<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/menuIteamView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Home View-->
            <TextView
                android:id="@+id/homeMenu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_item_height"
                android:layout_marginLeft="@dimen/menu_left_margin"
                android:gravity="left|center"
                android:text="@string/home_apps"
                android:textColor="@drawable/menu_text_selector"
                android:textSize="@dimen/menu_item_txt_size"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_item_divider_height"
                android:background="@color/colorGray"></RelativeLayout>
            <!--Home View-->

            <!--Hide View-->
            <TextView
                android:id="@+id/hideAppsMenu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_item_height"
                android:layout_marginLeft="@dimen/menu_left_margin"
                android:gravity="left|center"
                android:text="@string/hide_apps"
                android:textColor="@drawable/menu_text_selector"
                android:textSize="@dimen/menu_item_txt_size"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_item_divider_height"
                android:background="@color/colorGray"></RelativeLayout>
            <!--Hide View-->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>